@{
  Layout = "_Layout";
}

@model Registrar.Models.Course;

<h2>Course Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>
<h3>@Html.DisplayFor(model => model.CourseNumber)</h3>

<ul>
@if (@Model.Students.Count == 0)
{
  <p>no students found</p>
}
else
{
  <h4>Students in the course:</h4>
  <ul>
  @foreach (var join in @Model.Students)
  {
    <li>@join.Student.Name</li>
  }
  </ul>
}
</ul>



<div id="outer">
  <div class="table">
    <ul id="horizontal-list">
      <li>@Html.ActionLink("Back to courses", "Index")</li>
      <li>@Html.ActionLink("Edit Course", "Edit", new { id = Model.CourseId })</li>
      <li>@Html.ActionLink("Delete Course", "Delete", new { id = Model.CourseId })</li>
      <li>@Html.ActionLink("Home", "Index", "Home")</li>
    </ul>
  </div>
</div>